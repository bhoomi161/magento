<?xml version="1.0" ?>
<config>
    <modules>
        <Ccc_Salesman>
            <version>0.0.1</version>
        </Ccc_Salesman>
    </modules>
    <frontend>
        <routers>
            <salesman>
                <use>standard</use>
                <args>
                    <module>Ccc_Salesman</module>
                    <frontName>salesman</frontName>
                </args>
            </salesman>
        </routers>
    </frontend>
    <admin>
        <routers>
            <salesman>
                <use>admin</use>
                <args>
                    <module>Ccc_Salesman</module>
                    <frontName>salesman</frontName>
                </args>
            </salesman>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <salesman salesman="salesman">
                <title>Salesman</title>
                <sort_order>91</sort_order>
                <children>
                    <managesalesman module="salesman">
                        <title>Manage Salesman</title>
                        <sort_order>0</sort_order>
                        <action>salesman/adminhtml_salesman</action>
                    </managesalesman>
                </children>
            </salesman>
        </menu>
    </adminhtml>
     <global>
        <blocks>
            <salesman>
                <class>Ccc_Salesman_Block</class>
            </salesman>
        </blocks>
        <models>
            <ccc_salesman>
                <class>Ccc_Salesman_Model</class>
                <resourceModel>ccc_salesman_resource</resourceModel>
            </ccc_salesman>
            <ccc_salesman_resource>
                <class>Ccc_Salesman_Model_Resource</class>
                <entities>
                    <data>
                        <table>ccc_salesman_data</table>
                    </data>
                </entities>
            </ccc_salesman_resource>
        </models>
        <helpers>
            <salesman>
                <class>Ccc_Salesman_Helper</class>
            </salesman>
        </helpers>
        <resources>
            <salesman_setup>
                <setup>
                    <module>Ccc_Salesman</module>
                </setup>
            </salesman_setup>
        </resources>
    </global> 
</config>