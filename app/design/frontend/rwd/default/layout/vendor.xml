<?xml version="1.0"?>
<layout version="0.0.1">
    <default>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="vendor">
                <label>My Vendor Account</label>
                <url helper="vendor/getAccountUrl"/>
                <title>My Vendor Account</title>
                <prepare />
                <urlParams />
                <position>200</position>
            </action>
            <action method="addLink" translate="label title before_text" module="vendor">
                <label>Vendor Register</label>
                <url helper="vendor/getRegisterUrl"/>
                <title>Register Vendor</title>
                <prepare />
                <urlParams />
                <position>201</position>
                <li/>
                <a/>
            </action>
        </reference>
    </default>
    <vendor_logged_in>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="vendor">
                <label>Vendor Log Out</label>
                <url helper="vendor/getLogoutUrl" />
                <title>Vendor Log Out</title>
                <prepare />
                <urlParams />
                <position>100</position>
            </action>
        </reference>
    </vendor_logged_in>

    <vendor_logged_out>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="vendor">
                <label>Vendor Log In</label>
                <url helper="vendor/getLoginUrl"/>
                <title>Vendor Log In</title>
                <prepare />
                <urlParams />
                <position>100</position>
            </action>
        </reference>
        <remove name="reorder"></remove>
    </vendor_logged_out>

    <vendor_account_create>
        <remove name="header"/>
        <remove name="right"/>
        <remove name="footer"/>
        <reference name="content">
            <block type="vendor/account_register" name="vendorData" as="data" template="vendor/register.phtml"/>
        </reference>
    </vendor_account_create>
    <vendor_account_login>
        <remove name="header"/>
        <remove name="right"/>
        <remove name="footer"/>
        <reference name="content">
            <block type="vendor/account_login" name="vendorData" as="data" template="vendor/login.phtml"/>
        </reference>
    </vendor_account_login>

    <vendor_account_index>
        <label>Vendor My Account Dashboard</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/account_dashboard" name="vendor_account_dashboard" template="vendor/account/dashboard.phtml">
                <block type="vendor/account_dashboard_hello" name="vendor_account_dashboard_hello" as="hello" template="vendor/account/dashboard/hello.phtml"/>
                <block type="core/template" name="vendor_account_dashboard_top" as="top" />
                <block type="vendor/account_dashboard_info" name="vendor_account_dashboard_info" as="info" template="vendor/account/dashboard/info.phtml"/>
                <block type="vendor/account_dashboard_newsletter" name="vendor_account_dashboard_newsletter" as="newsletter" template="vendor/account/dashboard/newsletter.phtml"/>
                <block type="vendor/account_dashboard_address" name="vendor_account_dashboard_address" as="address" template="vendor/account/dashboard/address.phtml"/> 
            </block> 
        </reference>
    </vendor_account_index>

    <vendor_account_logoutsuccess translate="label">
        <label>Vendor Account Logout Success</label>
        <remove name="right" />
        <remove name="left" />
        <remove name="header" />
        <remove name="footer" />
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="vendor/account_logout" name="vendor_logout" template="vendor/logout.phtml" />
        </reference>
    </vendor_account_logoutsuccess>

    <vendor_account_edit translate="label">
        <label>vendor Account Edit Form</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Edit Account Info</title></action>
        </reference>
        <reference name="content">
            <block type="vendor/account_edit" name="vendor_edit" template="vendor/account/edit.phtml"/>
        </reference> 
    </vendor_account_edit>

    <vendor_account translate="label">
        <label>Vendor My Account (All Pages)</label>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
            <action method="addBodyClass">
                <class>vendor-account</class>
            </action>
        </reference>

        <reference name="content">
            <block type="page/html_wrapper" name="my.account.wrapper" translate="label">
                <label>My Account Wrapper</label>
                <action method="setElementClass">
                    <value>my-account</value>
                </action>
            </block>
        </reference>

        <reference name="left_first">
            <block type="vendor/account_navigation" name="vendor_account_navigation" before="-" template="vendor/account/navigation.phtml">
                <action method="addLink" translate="label" module="vendor">
                    <name>account</name>
                    <path>vendor/account/</path>
                    <label>Account Dashboard</label>
                </action>
                <action method="addLink" translate="label" module="vendor">
                    <name>account_edit</name>
                    <path>vendor/account/edit/</path>
                    <label>Account Information</label>
                </action>
            </block>
            <block type="vendor/marketplace_navigation" name="vendor_marketplace_navigation" before="-" template="vendor/marketplace/navigation.phtml">
                <!-- <action method="addLink" translate="label" module="vendor">
                    <name>create_group</name>
                    <path>vendor/group/new</path>
                    <label>Create Group</label>
                </action> -->
                <action method="addLink" translate="label" module="vendor">
                    <name>group_list</name>
                    <path>vendor/group/grid</path>
                    <label>Manage Group</label>
                </action>
                <!-- <action method="addLink" translate="label" module="vendor">
                    <name>product_attribute</name>
                    <path>vendor/attribute/new</path>
                    <label>Create Attribute</label>
                </action> -->
                <action method="addLink" translate="label" module="vendor">
                    <name>attribute_list</name>
                    <path>vendor/attribute/grid</path>
                    <label>Manage Attribute</label>
                </action>
                <action method="addLink" translate="label" module="vendor">
                    <name>product_list</name>
                    <path>vendor/product/grid</path>
                    <label>Manage Product</label>
                </action>
                <!-- <action method="addLink" translate="label" module="vendor">
                    <name>add_product</name>
                    <path>vendor/product/new</path>
                    <label>Add Product</label>
                </action> -->
                <!-- <action method="addLink" translate="label" module="vendor">
                    <name>order_history</name>
                    <path>vendor/marketplace/order</path>
                    <label>Order History</label>
                </action> -->
            </block>
        </reference>
    </vendor_account>

    <vendor_marketplace_new>
        <label>Add New Product</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Add Product</title></action>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_edit" name="marketplace_new" template="vendor/marketplace/new.phtml"/>
        </reference> 
    </vendor_marketplace_new>

    <vendor_marketplace_edit>
        <label>Add New Product</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Add Product</title></action>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_edit" name="marketplace_new" template="vendor/marketplace/new.phtml"/>
        </reference> 
    </vendor_marketplace_edit>

    <vendor_group_grid>
        <remove name="right"/>
        <label>Add New Product</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Add Product</title></action>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_group_grid" name="marketplace_new" template="vendor/marketplace/product/group/grid.phtml"/>
        </reference> 
    </vendor_group_grid>

    <vendor_group_edit>
        <remove name="right"/>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Add Product</title></action>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_group_edit_form" name="marketplace_edit" template="vendor/marketplace/product/group/edit/form.phtml"/>
        </reference> 
    </vendor_group_edit>

    <vendor_group_new>
        <remove name="right" />
        <label>Add New Group</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Add Product</title></action>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_group_edit_form" name="marketplace_new" template="vendor/marketplace/product/group/edit/form.phtml"/>
        </reference> 
    </vendor_group_new>

    <vendor_product_grid>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_grid" name="marketplace_grid" template="vendor/marketplace/product/grid.phtml" />
        </reference>
    </vendor_product_grid>

    <vendor_marketplace_order>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_order_grid" name="marketplace_order" template="vendor/marketplace/product/order/grid.phtml" />
        </reference>
    </vendor_marketplace_order>

    <vendor_attribute_new>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_attribute_form" name="marketplace_createattribute" template="vendor/marketplace/product/attribute/form.phtml"/>
        </reference>
    </vendor_attribute_new>

    <vendor_attribute_grid>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_attribute_grid" name="marketplace_showattribute" template="vendor/marketplace/product/attribute/grid.phtml"/>
        </reference>
    </vendor_attribute_grid>

    <vendor_attribute_edit>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_attribute_form" name="marketplace_editattribute" template="vendor/marketplace/product/attribute/form.phtml"/>
        </reference>
    </vendor_attribute_edit>

    <vendor_product_edit>
        <remove name="right" />
        <reference name="left">
            <block type="vendor/marketplace_product_edit_tabs" name="vendor_product_edit_tabs" template="vendor/marketplace/product/edit/tabs.phtml"></block>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_edit" name="vendor_product_edit" template="vendor/marketplace/product/edit.phtml"></block>
        </reference>
    </vendor_product_edit>

    <vendor_marketplace_form>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/marketplace_product_form" name="marketplace_form" template="vendor/marketplace/product/form.phtml"/>
        </reference>
    </vendor_marketplace_form>

    
</layout>