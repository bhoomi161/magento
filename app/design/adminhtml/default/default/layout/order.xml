<?xml version="1.0"?>
<layout>
    <order_adminhtml_order_index>
        <reference name="content">
            <block type="order/adminhtml_order" name="order_grid" />
        </reference>
    </order_adminhtml_order_index>
    <order_adminhtml_order_cart_index>
        <reference name="head">
            <action method="addJs">
                <script>ccc/jquery-3.6.0.js</script>
            </action>
            <action method="addJs">
                <script>ccc/after_jquery.js</script>
            </action>
            <action method="addJs">
                <script>ccc/mage.js</script>
            </action>
        </reference>
        <reference name="content">
            <block type="order/adminhtml_order_cart_main" name="cart_index"> 
                <block type="order/adminhtml_order_cart_main_account" name="account"/>
                <block type="order/adminhtml_order_cart_main_product" name="product" template="order/cart/main/product.phtml">
                    <block type="order/adminhtml_order_cart_main_product_grid" name="product_grid" />
                </block>
                <block type="order/adminhtml_order_cart_main_cartitems" name="cartitems"/>
                <block type="order/adminhtml_order_cart_main_billingaddress" name="billingaddress"/>
                <block type="order/adminhtml_order_cart_main_shippingaddress" name="shippingaddress"/>
                <block type="order/adminhtml_order_cart_main_payment" name="payment"/>
                <block type="order/adminhtml_order_cart_main_shipment" name="shipment"/>
                <block type="order/adminhtml_order_cart_main_total" name="total"/>

            </block>
        </reference>
    </order_adminhtml_order_cart_index>
    <order_adminhtml_order_cart_customergrid>
        <reference name="content">
            <block type="order/adminhtml_order_customer" name="customer_grid" />
        </reference>  
    </order_adminhtml_order_cart_customergrid>
    <order_adminhtml_order_showorder>
        <reference name="content">
            <block type="order/adminhtml_order_order_main" name="order"> 
                <block type="order/adminhtml_order_order_main_account" name="account"/>
                <block type="order/adminhtml_order_order_main_product" name="orderitems"/>
                <block type="order/adminhtml_order_order_main_billingaddress" name="billingaddress"/>
                <block type="order/adminhtml_order_order_main_shippingaddress" name="shippingaddress"/>
                <block type="order/adminhtml_order_order_main_payment" name="payment"/>
                <block type="order/adminhtml_order_order_main_shipment" name="shipment"/>
                <block type="order/adminhtml_order_order_main_total" name="ordertotal"/>

            </block>
        </reference>
    </order_adminhtml_order_showorder>
    
    
</layout>