<?xml version="1.0"?>
<config>
    <modules>
        <Ccc_User>
            <version>0.0.3</version>
        </Ccc_User>
    </modules>
    <frontend>
        <routers>
            <user>
                <use>standard</use>
                <args>
                    <module>Ccc_User</module>
                    <frontName>user</frontName>
                </args>
            </user>
        </routers>
        <layout>
            <updates>
                <ccc_user>
                    <file>user.xml</file>
                </ccc_user>
            </updates>
        </layout>
    </frontend>
    <admin>
       <routers>
        <user>
            <use>admin</use>
            <args>
                <module>Ccc_User</module>
                <frontName>user</frontName>
            </args>
        </user>
            <!-- <adminhtml>
                <args>
                    <modules>
                        <customer before="Mage_Adminhtml">Ccc_Customer_Adminhtml</customer>
                    </modules>
                </args>
            </adminhtml> -->
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <user>
                <title>User</title>
                <sort_order>71</sort_order>
                <children>
                    <manageuser module="user">
                        <title>Manage User</title>
                        <sort_order>0</sort_order>
                        <action>user/adminhtml_user</action>
                    </manageuser>
                </children>
            </user>
        </menu>
    </adminhtml>
    <global>
        <blocks>
            <ccc_user>
                <class>Ccc_User_Block</class>
            </ccc_user>

            <!-- <adminhtml>
                <rewrite>
                    <customer_grid>Ccc_Customer_Block_Adminhtml_Customer_Grid</customer_grid>
                </rewrite>
            </adminhtml> -->

            <ccc_user_admin>
                <class>Ccc_User_Block_Adminhtml</class>
            </ccc_user_admin>
           
           
        </blocks>
         <helpers>
            <user>
                <class>Ccc_User_Helper</class>
            </user>
            <!-- <customer>
                <rewrite>
                    <data>Ccc_Customer_Helper_Data</data>
                </rewrite>
            </customer>             -->
        </helpers>
        <models>
            <ccc_user>
                <class>Ccc_User_Model</class>
                <resourceModel>ccc_user_resource</resourceModel>
            </ccc_user>
            <ccc_user_resource>
                    <class>Ccc_User_Model_Resource</class>
                    <entities>
                        <data>
                            <table>ccc_user_data</table>
                        </data>
                    </entities>
            </ccc_user_resource>
            <!-- <customer>
                <rewrite>
                    <customer>Ccc_Customer_Model_Customer</customer>
                </rewrite>
            </customer> -->
            <!-- <customer_resources>
                <rewrite>
                    <customer>Ccc_Customer_Model_Resource_Collection</customer>
                    <customer_collection>Ccc_Customer_Model_Resource_Customer_Collection</customer_collection>
                </rewrite>
            </customer_resources> -->
         </models>
        <resources>
            <user_setup>
                <setup>
                    <module>Ccc_User</module>
                </setup>
            </user_setup>
        </resources>

    </global>
</config>